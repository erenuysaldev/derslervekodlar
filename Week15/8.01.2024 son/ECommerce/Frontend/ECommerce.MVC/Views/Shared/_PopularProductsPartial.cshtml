@{
    List<ProductModel> products = Model.Products;
}
<section class="popular-products py-3">
    <div class="container">
        <h2 class="text-center mb-4">Popüler Ürünler</h2>
        <div class="row">
            @foreach(var product in products)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                    <div class="card product-card">
                        <div onclick="window.location.href='@Url.Action("Details","Product",new {id=product.Id})'" style="cursor: pointer;">
                            <img src="http://localhost:5050/@product.ImageUrl" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@($"{product.Price:C2}")</p>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-area="" asp-controller="Basket" asp-action="AddToBasket" asp-route-productId="@product.Id" asp-route-quantity="1" class="btn btn-primary btn-block">Sepete Ekle</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>