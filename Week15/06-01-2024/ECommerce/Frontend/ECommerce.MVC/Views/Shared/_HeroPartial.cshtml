<section class="hero bg-light py-5">
    <div class="container">
        <div id="categoryCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" style="background-image: url('/images/cat-1.jpg'); 
                                background-size: cover; 
                                background-position: center; 
                                height: 300px;">
                    <a href="#" class="d-flex justify-content-center align-items-center"
                        style="height: 100%; text-decoration: none;">
                        <div class="text-center text-white">
                            <h2>Kategori1</h2>
                            <p>Kategori1 Açıklaması</p>
                        </div>
                    </a>
                </div>
                @for (int i = 0; i < 3; i++)
                {
                    <div class="carousel-item active" style="background-image: url('/images/cat-2.jpg'); 
                                background-size: cover; 
                                background-position: center; 
                                height: 300px;">
                        <a href="#" class="d-flex justify-content-center align-items-center"
                            style="height: 100%; text-decoration: none;">
                            <div class="text-center text-white">
                                <h2>Kategori @i</h2>
                                <p>Kategori @i Açıklaması</p>
                            </div>
                        </a>
                    </div>
                }

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#categoryCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#categoryCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>