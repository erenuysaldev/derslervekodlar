@{
    Product product = ViewBag.Product;
}

<div class="card m-auto mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/images/@product.ImageUrl" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
                <p class="card-text"><small class="text-body-secondary">3 gün önce güncellendi</small></p>
            </div>
        </div>
    </div>
</div>
